{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "extends": "airbnb-base",
  "plugins": [
    "import"
  ],
  "rules": {
    "semi": [
      "error",
      "never"
    ],
    "no-param-reassign": [
      "error", {
        "props": false
      }
    ],
    "import/no-extraneous-dependencies": [
      "error", {
        "devDependencies": true
      }
    ],
    "prefer-rest-params": "off",
    "require-yield": "off"
  }
}
